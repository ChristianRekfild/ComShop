<Window x:Class="ComShop.item.AddCategory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ComShop.item"
        mc:Ignorable="d"
        WindowState="Maximized"
        ResizeMode="NoResize"
        Title="Добавление Категории" Height="720" Width="1280">
    <Grid>
        <TextBox x:Name="tbox_newCategory" HorizontalAlignment="Center" Margin="0,179,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="666" Height="90" FontSize="40" TextAlignment="Center"/>
        <Label Content="Введите название категории" HorizontalAlignment="Center" Margin="0,116,0,0" VerticalAlignment="Top" Width="666" Height="63" HorizontalContentAlignment="Center" FontSize="40"/>
        <Button Content="Добавить" HorizontalAlignment="Center" Margin="0,279,0,0" VerticalAlignment="Top" Width="666" Height="67" FontSize="40" Click="add"/>

    </Grid>
</Window>
