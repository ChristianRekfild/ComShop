<Window x:Class="ComShop.BuyItem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ComShop"
        mc:Ignorable="d"
        Title="Покупка товара" Height="720" Width="1280">
    <Grid>


        <Label Content="Категория" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="108"/>
        <Label Content="Продавец" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" Width="108"/>

        <Label Content="Описание" HorizontalAlignment="Left" Margin="10,103,0,0" VerticalAlignment="Top" Width="108"/>
        <Label Content="Серийный номер" HorizontalAlignment="Left" Margin="10,134,0,0" VerticalAlignment="Top" Width="108"/>
        <Label Content="Цена покупки" HorizontalAlignment="Left" Margin="10,165,0,0" VerticalAlignment="Top" Width="108"/>


        <Button Content="Главное меню" HorizontalAlignment="Left" Margin="10,649,0,0" VerticalAlignment="Top" Height="45" Width="300" Click="goToMainMenu"/>
        <Label Content="Цена продажи" HorizontalAlignment="Left" Margin="10,196,0,0" VerticalAlignment="Top" Width="108"/>

    </Grid>
